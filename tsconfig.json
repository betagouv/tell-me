{
  "extends": "@ivangabriele/tsconfig-next",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@common/*": ["common/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.cjs"],
  "exclude": [".next/*", "node_modules/*"],
  "ts-node": {
    "esm": true
  }
}
